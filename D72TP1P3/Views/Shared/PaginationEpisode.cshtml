<style>
    a {
        color:black
    }
</style>

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-end">
            @if (ViewBag.Page == 1)
            {
                <li style="background-color:orange" class="page-item disabled">
                    <a style="color:black" class="page-link">@D72TP1P3.Resources.Pagination.Previous</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="/Library/Season?SaisonId=@ViewBag.SaisonId&Page=@(ViewBag.Page - 1)" tabindex="-1">@D72TP1P3.Resources.Pagination.Previous</a>
                </li>
            }
       
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
             {
                if (i == ViewBag.Page)
                {
                    <li style="background-color:orange" class="page-item active">
                        <a style="color:black" class="page-link" href="/Library/Season?SaisonId=@ViewBag.SaisonId &Page=@i">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="/Library/Season?SaisonId=@ViewBag.SaisonId&Page=@i">@i</a>
                    </li>
                }
             }

            @if (ViewBag.Page == ViewBag.TotalPages)
            {
                <li class="page-item disabled">
                    <a class="page-link">Next</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a style="color:black" class="page-link" href="/Library/Season?SaisonId=@ViewBag.SaisonId&Page=@(ViewBag.Page + 1)">@D72TP1P3.Resources.Pagination.Next</a>
                </li>
            }
       
        </ul>
    </nav>
}