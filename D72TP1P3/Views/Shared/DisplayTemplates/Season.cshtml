@model D72TP1P3.Models.DataModels.Season

<div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
    <div style="background-color:orange" class="card">
        <a href="/Library/Season?SaisonId=@Model.SeasonId">
            <img class="card-img-top mx-auto rounded" style="max-width:250px;max-height:375px;min-width:250px;min-height:375px;" src="@Model.Image" alt="S@(Model.Number)">
        </a>
        <div class="card-body text-center">
            <h5 class="card-title">S@(Model.Number)</h5>
            <p>@Model.Episodes.Count @D72TP1P3.Resources.Models.StringEpisodes.Episodes</p>
        </div>
    </div>
</div>
